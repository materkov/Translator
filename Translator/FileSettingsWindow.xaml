<Window x:Class="Translator.FileSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FileSettingsWindow" Height="300" Width="471">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="94*" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="142*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="199*" />
        </Grid.RowDefinitions>

        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Text="Имя" />
        <TextBox Grid.Column="2" Height="23" HorizontalAlignment="Left" VerticalAlignment="Center" Width="213" Margin="0,4" />

        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Text="Полный путь" Grid.Row="1"/>
        <TextBox Grid.Column="2" Grid.Row="1" Height="23" HorizontalAlignment="Left" VerticalAlignment="Center" Width="213" Margin="0,4" />

    </Grid>
</Window>
